{
  "compilerOptions": {
    "esModuleInterop": true,
    "moduleResolution": "node",
    "alwaysStrict": true,
    "allowJs": true,
    "strict": true,
    "rootDir": "./src",
    "outDir": "./build",
    "declaration": true,
    "sourceMap": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "allowSyntheticDefaultImports": true,
    "target": "es2015",
    "module": "CommonJS",
    "lib": ["ESNext", "dom"]
  },
  "exclude": ["node_modules", "build", "dist", "example"]
}
